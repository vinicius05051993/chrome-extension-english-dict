{
  "manifest_version": 3,
  "name": "Simple Vocabulary by Meyfel",
  "version": "1.0",
  "description": "Traduza, marque e aprenda novas palavras enquanto navega.",
  "permissions": [
    "storage",
    "scripting",
    "identity",
    "identity.email"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/img.png",
      "48": "icons/img.png",
      "128": "icons/img.png"
    }
  },
  "icons": {
    "16": "icons/img.png",
    "48": "icons/img.png",
    "128": "icons/img.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/img.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
