{
  "manifest_version": 3,
  "name": "Simple Vocabulary by Meyfel",
  "version": "1.0",
  "description": "Translate, markup and learn new words while browsing.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "identity",
    "identity.email"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/img.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
